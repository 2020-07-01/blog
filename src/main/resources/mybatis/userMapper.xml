<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.blog.dao.UserDao">


    <resultMap id="resultMap" type="com.example.blog.entity.User">

        <id column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="register_date" property="registerDate" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="base_sql">
        user_id,user_name,password,register_date
    </sql>

    <!--查询用户账号-->
    <select id="selectUserByNP" resultMap="resultMap">
        select
        <include refid="base_sql"/>
        from user
        where user_name = #{userName,jdbcType=VARCHAR} and password = #{password,jdbcType=VARCHAR}
    </select>


    <!--注册用户-->
    <insert id="insertUser" parameterType="com.example.blog.entity.User">

        insert into user (user_id,user_name,password,register_date)
        values (#{userId,jdbcType=VARCHAR},#{userName,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{registerDate,jdbcType=VARCHAR})

    </insert>


</mapper>
